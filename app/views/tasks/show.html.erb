<div class="container-fluid">

  <div data-controller="tracker" data-tracker-task-id-value="<%= @task.id %>" data-tracker-time-log-value="<%= @task.time_log %>" data-tracker-authenticity-token-value="<%= form_authenticity_token %>">

    <div class="row">

       <h1>Task Title: <%= @task.title %></h1>
       <h2>Task Description: <%= @task.description %></h2>
         <p>Task Billing Rate: â‚¬<%= @task.billing_rate %></p>
         <p>Time right now:<%= Time.now %></p>

      <div class="col-sm-8" id="watchAreaContainer">
        <h3 id="stopWatchIcon"><i class="fas fa-stopwatch fa-3x"></i></h3>
        <div id="watchArea">
          <h1 id="timer" data-tracker-target="time" class="display-3">
            <%= @task.time_log %>
          </h1>
          <div id="controls">
            <button class="btn btn-dark" id="toggle" data-action="click->tracker#toggle" data-tracker-target="button">
              START
            </button>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
