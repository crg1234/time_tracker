<div class="container-fluid">
  <div class="row">

    <%= render 'shared/sidebarshowpages'%>


    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="chartjs-size-monitor">
        <div class="chartjs-size-monitor-expand">
          <div class="">
          </div>
        </div>
        <div class="chartjs-size-monitor-shrink">
          <div class="">
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <div>
          <h1 class="h2" style="margin-bottom: 20px;"><%= @project.name %></h1>
          <h2><%= @client.first_name  %> <%= @client.last_name %></h2>
          <p>Deadline: <%= @project.deadline %> </p>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <div class="card">
            <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#newTaskPopUp">Add task</button>
          </div>
        </div>
        <% unless @tasks.first.nil? %>
          <% @project.tasks.each do |task| %>
            <div class="col-3">
              <div><%= link_to task.title, task_path(task) %></div>
            </div>
          <% end %>
        <% end %>
      </div>
        <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#newTaskPopUp">Add task</button>

    </main>

</div>


<div class="modal fade" id="newTaskPopUp" tabindex="-1" aria-labelledby="newTaskPopUpLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New Task</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <%= simple_form_for [@project, @task] do |f| %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :billing_rate %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
