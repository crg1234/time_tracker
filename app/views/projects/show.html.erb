<h1>Name: <%= @project.name %></h1>
<h2>Client: <%= @client.first_name  %> <%= @client.last_name %></h2>
<h2>Deadline: <%= @project.deadline %></h2>
<h2>Time spent: <%= @project.time_counter %></h2>

<div style="border: 1px solid black; padding: 10px;">
  <h2>Tasks:</h2>
  <% if @tasks.first.nil? %>
    <p>No tasks yet!</p>
    <% else %>
    <ul>
      <% @project.tasks.each do |task| %>
        <li><%= task.title %></li>
      <% end %>
    </ul>
  <% end %>
  <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#newTaskPopUp">Add task</button>
</div>

<div class="modal fade" id="newTaskPopUp" tabindex="-1" aria-labelledby="newTaskPopUpLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New Task</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@project, @task] do |f| %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :billing_rate %>
          <%= f.button :submit %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
