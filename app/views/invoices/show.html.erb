 <div class="container-fluid">
  <div class="row">

    <%= render 'shared/sidebarshowpages'%>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <div>
          <h1 class="h2">Invoice #<%= @invoice.invoice_number %></h1>
          <p>Project Name: <%= @project.name  %></p>
          <p><i class="fa-regular fa-calendar"></i> &nbsp Date created: <%= @invoice.created_at.strftime("%d %B %Y")%></p>
        </div>
        <div>
          <div class="btn-toolbar mb-2 mb-md-0 d-flex justify-content-end">
            <div class="btn-group me-2">
              <%= link_to "Create PDF", invoice_path(@invoice, format: :pdf), :class => "btn btn-outline-secondary" %>
            </div>
          </div>
          <div style="margin-top: 20px;">
            <p>Payment Deadline: <%= @invoice.payment_deadline %></p>
          </div>
        </div>
      </div>
      <div class="border-bottom mb-3 d-flex justify-content-between align-items-top">
        <div class="d-flex justify-left">
          <p>From: <%= @user.first_name %> <%= @user.last_name %></p>
        </div>
        <div>
          <p>To:&nbsp<%= @client.first_name %> <%= @client.last_name  %></p>
          <p></p>
          <p><%= @client.email %></p>
          <p><%= @client.billing_address %></p>
        </div>
      </div>
      <div>
        <ul style="padding: 0; list-style: none;" class="border-bottom">
          <% @tasks.each do |task| %>
            <li>
              <div class="card-invoice-task d-flex justify-content-between align-items-center">
                <div class="card-invoice-task-info">
                  <h2><%= task.title %></h2>
                  <p><%= task.description %></p>
                </div>
                <div>
                  <p>€<%= task.billing_rate %>&nbsp per hour</p>
                  <p># insert time spent on task here</p>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="d-flex align-items-right justify-content-end">
        <div>
          <h1> Total: €<%= @invoice.billing_amount %></h1>
          <p> Time spent: <%= @project.time_counter %></p>
        </div>
      </div>
    </main>
  </div>
</div>
